<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="LabelBug.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Background="LightGray"
            Spacing="25"
            VerticalOptions="Center"
            WidthRequest="150">

            <Label Background="LightBlue" Text="This is a normal label with no Linebreak mode or max lines so it appears correctly" />

            <Label
                Background="LightBlue"
                LineBreakMode="TailTruncation"
                Text="This label has Linebreak mode set to tail truncation but no max lines" />

            <Label
                Background="LightBlue"
                MaxLines="2"
                Text="This label has 2 max lines with no line break mode" />

            <Label
                Background="LightBlue"
                LineBreakMode="TailTruncation"
                MaxLines="2"
                Text="This label has Linebreak mode set to tail truncation and has 2 max lines" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
